<meta property="og:type" content="website">
<meta property="og:url" content="{{page.url(true)}}">
<meta property="og:site_name" content="{{site.title}}">
<meta property="og:title" content="{{page.title}}">
<meta property="og:description" content="{% if page.header.metadata.description %}{{page.header.metadata.description}}{% else %}{{site.metadata.description}}{% endif %}">
<meta property="og:image" content="{{base_url_absolute}}{{ headerImage.url }}">
<meta property="og:image:width" content="{{ headerImage.width }}">
<meta property="og:image:height" content="{{ headerImage.height }}">
