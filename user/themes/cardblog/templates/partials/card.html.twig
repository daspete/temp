<div class="col s12 m6 l4">
    <a href="{{p.url}}">
        <div class="card">
            {% if p.header.image %}
                <div class="card-image">
                    <img src="{{ page.find(p.url).media[p.header.image].url }}">
                    <span class="card-title">{{p.title}}</span>
                </div>
                <div class="card-content black-text">
                     {{p.summary}}
                </div>
            {% else %}
                <div class="card-content">
                    <span class="card-title">{{p.title}}</span>
                    {{p.summary}}
                </div>
            {% endif %}
            <div class="card-action">
                <button class="waves-effect waves-light btn" href="{{p.url}}">{{ page.header.readmore }}</button>
            </div>
        </div>
    </a>
</div>
