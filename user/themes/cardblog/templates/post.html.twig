{% extends 'base/base.html.twig' %}
{% block content %}
    {% set pageContent = page.content | slice(page.summary | length) %}
        <div class="post-container">
            <div class="post-content">
                {{ pageContent }}

                {% include 'partials/donationbutton.html.twig' %}

                {% if config.plugins.jscomments.enabled %}
                    {{ jscomments() }}
                {% endif %}
            </div>
        </div>
{% endblock %}
{% block footer %}
    {% include 'partials/footer.html.twig' %}
{% endblock %}